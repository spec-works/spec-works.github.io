{
  "build": {
    "content": [
      {
        "files": ["**.md", "**.yml"],
        "exclude": ["obj/**", "_site/**", "**/bin/**", "**/obj/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      },
      {
        "files": ["styles/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern", "template"],
    "globalMetadata": {
      "_appTitle": "SpecWorks Factory",
      "_appName": "SpecWorks",
      "_appFooter": "SpecWorks - Specification-Centric Software Components",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_extraCss": ["styles/main.css"]
    },
    "fileMetadata": {
      "_disableContribution": {
        "specification/**": false,
        "parts/**": false
      }
    }
  }
}
